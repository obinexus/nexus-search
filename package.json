{
  "name": "@obinexuscomputing/nexus-search",
  "version": "0.2.37",
  "description": "High-performance search indexing and query system",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "./rollup.config.js",
    "TODO.md",
    "tsconfig.json",
    "jest.setup.ts",
    ".eslintrc.mjs",
    "fixtures/",
    "docs/",
    "./prettierc",
    "TODO.md",
    "jest.config.mjs",
    "eslint.config.js",
    ".gitignore",
    "package.json"
  ],
  "scripts": {
    "build": "rollup -c",
    "test:package": "./scripts/test-package.sh",
    "demo": "node fixtures/server.js",
    "dev": "rollup -c -w",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --config jest.config.js",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "postinstall": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.67",
    "@types/punycode": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.57.1",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.7",
    "punycode": "^2.3.1",
    "rollup": "^4.28.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "alias": "^0.0.5",
    "idb": "^8.0.0"

  },
  "directories": {
    "doc": "docs",
    "fixtures": "fixtures",
    "dist":"dist",
    "src":"src"
  },
  "keywords": [
    "@obinexuscomputing/nexus-search",
    "pagerank",
    "seo",
    "search",
    "indexing",
    "query",
    "fuzzy matching",
    "real-time updates",
    "typescript",
    "indexeddb",
    "high-performance",
    "nested fields",
    "caching",
    "nexus-search"
  ],
  "author": "Nnamdi Michael Okpala",
  "license": "ISC"

}
