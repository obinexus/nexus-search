{
  "name": "@obinexuscomputing/nexus-search",
  "version": "0.1.8",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "description": "A high-performance search indexing and query system that uses a trie data structure and BFS/DFS algorithms for fast full-text search with fuzzy matching.",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/nexus-search.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "postbuild": "node scripts/verify-build.js",
    "demo": "node fixtures/server.js",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "./rollup.config.js",
    "TODO.md",
    "tsconfig.json",
    "jest.setup.ts",
    ".eslintrc.mjs",
    "fixtures/",
    "docs/",
    "./prettierc",
    "TODO.md",
    "jest.config.mjs",
    "eslint.config.js",
    ".gitignore",
    "package.json"
  ],
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/punycode": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "alias": "^0.0.5",
    "eslint": "^8.57.1",
    "globals": "^15.12.0",
    "idb": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.7",
    "punycode": "^2.3.1",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "directories": {
    "doc": "docs",
    "fixtures": "fixtures",
    "dist": "dist",
    "src": "src"
  },
  "keywords": [
    "@obinexuscomputing/nexus-search",
    "pagerank",
    "seo",
    "search",
    "indexing",
    "query",
    "fuzzy matching",
    "real-time updates",
    "typescript",
    "indexeddb",
    "high-performance",
    "nested fields",
    "caching",
    "nexus-search"
